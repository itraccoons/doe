#!/bin/sh

#set -e

DOE="/usr/local/bin/doe"

echo "INSTALL $DOE"

curl -fsSL https://doe.cloud/get | sudo sh
echo "$? curl -fsSL https://doe.cloud/get | sudo sh"

[ "$(command -v doe)" = "$DOE" ]
echo "$? [ \"\$(command -v doe)\" = \"$DOE\" ]"

[ -e "$DOE" ]
echo "$? [ -e \"$DOE\" ]"

echo "CALL $DOE"

[ "$(doe list-modules)" = "create completion " ]
echo "$? [ \"\$(doe list-modules)\" = \"create completion\" ]"
