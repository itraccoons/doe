#!/bin/bash 

HELP=\"\${RED}doe ${mod} ${func} .....\${NC}\"
MOD_DATADIR=\$( dirname \${BASH_SOURCE[0]} )/.data

${mod}_${func}_opts=\"${opt}\"

${mod}_${func}()
{
    while getopts \$${mod}_${func}_opts o; do
	case \$o in
	    '?'|'h' ) echo \"\$HELP\" && return 1 ;;
	    \$o      ) eval arg_opt_\$o=\${OPTARG} ;;
	esac
    done

    echo \"Your function with agruments\"
    declare -p | grep arg_opt_
}

${mod}_${func} "\"\$@\"" || exit 1
