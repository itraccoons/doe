#!/bin/sh

_self_get_modules()
{
    if [ x${doe_modules_url} = x ]; then
	echo "doe.conf: doe_modules_url is undefined"
    else
	git clone ${doe_modules_url} $DOE_HOMEDIR/lib/doe-modules
	cd "$DOE_MODDIR" || exit 1
	ln -s ../lib/doe-modules/* .
	echo "${RED}Linked: $($0 list-modules)${NC}"
    fi
}

_self_get_modules "$@"
