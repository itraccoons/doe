#!/bin/sh

HELP="Something goes wrong"

_self_get_modules()
{
    cd "$DOE_HOMEDIR/lib" && git clone ${doe_modules_url} || (echo ${HELP}; exit 1)
    cd "$DOE_MODDIR" && ln -s ../lib/doe-modules/* . || (echo ${HELP}; exit 1)

    echo "${RED}Linked: $($0 list-modules)${NC}"
}

_self_get_modules "$@"
