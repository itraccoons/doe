#!/bin/sh

set -e

. ~/doe/include/doe.global.variables
. ~/doe/include/doe.common.functions
. ${DOE_CFGDIR}/doe.conf

# if doe executed without any $arg => exec with default command
[ $# -eq 0 ] && eval "$0 ${default_command}" && exit 0

[ "$1" = "list-modules" ] && list_modules && exit 0

mod=$1
shift

call_module ${mod} $@
















